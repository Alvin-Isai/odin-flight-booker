<h1>Your Flight</h1>
<table>
  <thead>
    <tr>
      <th>Flight</th>
      <th>Departs</th>
      <th>Arrives</th>
      <th>Date</th>
      <th>Time</th>
      <th>Duration</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @flight.id%></td>
        <td><%= @flight.from_airport.name%></td>
        <td><%= @flight.to_airport.name%></td>
        <td><%= @flight.start_date.strftime('%b %d, %Y')%></td>
        <td><%= @flight.start_date.strftime('%H:%M%P') %></td>
        <td><%= @flight.duration%> Hours</td>
      </tr>
  <tbody>
</table>

<h2>Passenger Info<h2>
<%= form_for @booking do |f| %>
  <%= f.fields_for :passengers do |p| %>
    <%= p.label :name%>
    <%= p.text_field :name%><br>

    <%= p.label :email%>
    <%= p.text_field :email %><br><br>
  <% end %>
  <%= f.hidden_field :flight_id, value: params[:flight_id] %>
  <%= f.submit 'Submit' %><br>
<% end %>
